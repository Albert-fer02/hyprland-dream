{
    "custom/media-control": {
        "format": "󰐊",
        "format-icons": {
            "default": "󰐊",
            "playing": "󰏤",
            "paused": "󰐊"
        },
        "tooltip": true,
        "tooltip-format": "Control Multimedia\n\nClic: Play/Pause\nClic derecho: Siguiente\nClic medio: Anterior\nScroll: Cambiar reproductor",
        "on-click": "playerctl play-pause",
        "on-click-right": "playerctl next",
        "on-click-middle": "playerctl previous",
        "on-scroll-up": "playerctl -l | head -1 | xargs -I {} playerctl -p {} play-pause",
        "on-scroll-down": "playerctl -l | tail -1 | xargs -I {} playerctl -p {} play-pause",
        "interval": 2,
        "exec": "echo 'media-control'",
        "exec-if": "playerctl -l 2>/dev/null | head -1",
        "return-type": "json"
    }
} 